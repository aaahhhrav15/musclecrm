pipeline {
  agent any

  tools {
    nodejs 'Node18'
  }

  environment {
    CI = "true"
  }

  stages {
    stage('Checkout Code') {
      steps {
        echo "🔁 Cloning GitHub repo..."
        git credentialsId: 'github-creds', url: 'https://github.com/aaahhhrav15/musclecrm.git', branch: 'main'
      }
    }

    stage('Install Dependencies') {
      steps {
        dir('client') {
          echo "📦 Installing frontend dependencies..."
          sh '''
            node -v
            npm -v
            npm install
          '''
        }
      }
    }

    stage('Build React App') {
      steps {
        dir('client') {
          echo "⚙️ Building frontend..."
          withCredentials([file(credentialsId: 'frontend-dev', variable: 'ENV_FILE')]) {
            sh '''
              cp $ENV_FILE .env
              npm run build
            '''
          }
        }
      }
    }

    stage('Deploy to S3 and Invalidate') {
      steps {
        withCredentials([
          usernamePassword(credentialsId: 'aws-creds', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')
        ]) {
          dir('client') {
            echo "🚀 Deploying to S3..."
            sh '''
              aws s3 sync build/ s3://musclecrm-frontend --delete
              echo "🔄 Invalidating CloudFront cache..."
              aws cloudfront create-invalidation --distribution-id E21O8U7YKLATRS --paths "/*"
            '''
          }
        }
      }
    }
  }

  post {
    success {
      echo '✅ Frontend deployed successfully!'
    }
    failure {
      echo '❌ Deployment failed.'
    }
  }
}
